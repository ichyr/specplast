= simple_form_for(@specialization, html:{ multipart: true, class: 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, inner_html: {class: 'form-control'}
    = f.label :avatar
    .upload-preview
      = image_tag @specialization.avatar.url(:thumb).to_s
    = f.file_field :avatar, class: "file"

    = f.simple_fields_for :specdatum do |builder|
      = builder.input :id, wrapper_html: { class: 'hidden' }
      = builder.input :gen_info, as: :bootsy, input_html: {class: 'form-control', rows: 15}
      = builder.input :proby, as: :bootsy, input_html: {class: 'form-control', rows: 15}
      = builder.input :activity, as: :bootsy, input_html: {class: 'form-control', rows: 15}
      = builder.input :provid, as: :bootsy, input_html: {class: 'form-control', rows: 15}
      = builder.input :file, as: :file, input_html: {  accept: FileUploader.new.extentions_for_accept_attribute }
    end

  .form-actions
    = f.button :submit, input_html: {class: 'btn btn-success'}
